<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_70sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/studentList"
    android:layout_marginStart="@dimen/_12sdp"
    android:layout_marginEnd="@dimen/_12sdp"
    android:layout_marginVertical="@dimen/_10sdp"
    android:layout_marginHorizontal="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_8sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/_5sdp"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/studentName"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_30sdp"
            android:gravity="start"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toEndOf="@id/studentImage"
            android:fontFamily="@font/balooda2_semi_bold"
            android:text="Rieze Andrei Venzon"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp" />
        <TextView
            android:id="@+id/studentGrades"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_30sdp"
            android:gravity="start"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_toEndOf="@id/studentImage"
            android:fontFamily="@font/balooda2_semi_bold"
            android:text="Grade: "
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp" />
        <TextView
            android:id="@+id/studentAverage"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_30sdp"
            android:gravity="start"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_toEndOf="@id/studentGrades"
            android:fontFamily="@font/balooda2_semi_bold"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/studentImage"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="start"
            android:src="@drawable/student_image"
            app:civ_border_color="#000000"
            app:civ_border_width="2dp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>